#!/usr/bin/env python

"""
Display information on a FITS header.
"""

def fits():
    """Get the fits module."""
    try:
        from astropy.io import fits
    except ImportError as astropy_error:
        try:
            import pyfits as fits
        except ImportError as pyfits_error:
            raise astropy_error
    return fits

def main():
    """Main operational function."""
    import argparse
    parser = argparse.ArgumentParser(description="Display FITS file information", epilog=__doc__)
    parser.add_argument('fitsfile', type=argparse.FileType('rb'), help="File to examine.")
    args = parser.parse_args()
    
    fits().info(args.fitsfile)
    
if __name__ == '__main__':
    main()
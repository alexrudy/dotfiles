#!/bin/bash
# Launch Daemon Kicker for Draco
# Run this script after network volumes have mounted to ensure that the Launch Daemons are running correctly.

#Unload the Daemons
launchctl unload edu.pomona.astro.alexrudy.makelog
launchctl unload edu.pomona.astro.alexrudy.skyclops
launchctl unload edu.pomona.astro.alexrudy.givehead
launchctl unload edu.pomona.astro.alexrudy.bishopshuttle

# Reload the Daemons 
launchctl load /Library/LaunchAgents/edu.pomona.astro.alexrudy.makelog.plist
launchctl load /Library/LaunchAgents/edu.pomona.astro.alexrudy.skyclops.plist
launchctl load /Library/LaunchAgents/edu.pomona.astro.alexrudy.givehead.plist
launchctl load /Library/LaunchAgents/edu.pomona.astro.alexrudy.bishopshuttle.plist

# Restart the Daemons (Not necessary, but puts them into action once.)
launchctl start edu.pomona.astro.alexrudy.makelog
launchctl start edu.pomona.astro.alexrudy.skyclops
launchctl start edu.pomona.astro.alexrudy.givehead
launchctl start edu.pomona.astro.alexrudy.bishopshuttle


echo "Kicked LD Plist files back into action!"
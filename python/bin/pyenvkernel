#!/usr/bin/env sh

## Install jupyter kernels from pyenv with version names

version=$1
vfullname=${version#$(pyenv root)/versions/}
vversion=${vfullname%%/*}
vname=$(basename ${vfullname%/bin/python})
if [ $vversion != $vname ]; then
  vname=${vname}-${vversion}
fi
eval "$version -m ipykernel install --name=$vname --user"
